# Backend environment sample
IS_LOCAL_ENV=true

# Tenant config example (LOCALDEVLOCALHOST = tenant name derived from hostname)
LOCALDEVLOCALHOST={"database":{"user":"db-user","password":"password","db_name":"updraft-interview","host":"database","port":"5432"}}

# LLM provider (Gemini)
# Prefer tenant secret via SecretsManager; fallback to shared/env
LLM_GOOGLE_API_KEY=your-gemini-api-key
LLM_GOOGLE_MODEL=gemini-2.5-flash

# Generation controls
LLM_TEMPERATURE=0.3
LLM_MAX_OUTPUT_TOKENS=2048

# Provider robustness
LLM_RETRY_ATTEMPTS=2
LLM_RETRY_BACKOFF_S=0.5

# Streaming
LLM_STREAM_TIMEOUT_S=120
